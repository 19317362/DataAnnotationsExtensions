@model IEnumerable<Type>

@{
    ViewBag.Title = "Home Page";
}

<h2>Welcome to the DataAnnotationsExtensions sample/test website!</h2>
<p>
    To learn more about DataAnnotationsExtensions visit <a href="http://github.com/srkirkland" title="DataAnnotationsExtensions GitHub">the project site</a>.
</p>
<ul>
    @foreach (var validationAttribute in Model.Select(x => new { x.Name, Controller = x.Name.Substring(0, x.Name.Length - "attribute".Length) }))
    { 
    <li>
        @Html.ActionLink(validationAttribute.Name, "Create", validationAttribute.Controller)
    </li>    
    }
</ul>